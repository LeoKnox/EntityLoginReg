@model MyModel

<h1>Register to this cool site!</h1>
<a href="/login">Login</a>
<br>
<form asp-action="RegisterUser" asp-controller="Home" method="post">
    <span asp-validation-for="FirstName"></span>
    <label asp-for="FirstName"></label>
    <input asp-for="FirstName"><br>
    <span asp-validation-for="LastName"></span>
    <label asp-for="LastName"></label>
    <input asp-for="LastName"><br>
    <span asp-validation-for="Email"></span>
    <label asp-for="Email"></label>
    <input asp-for="Email"><br>
    <span asp-validation-for="Password"></span>
    <label asp-for="Password"></label>
    <input asp-for="Password"><br>
    <span asp-validation-for="cPassword"></span>
    <label asp-for="cPassword"></label>
    <input asp-for="cPassword"><br>

    <input value = "Register Now" type = "submit">
</form>